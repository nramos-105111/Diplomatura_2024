<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center text-dark mt-5">Login</h2>
      <div class="card my-3" style="max-width: 400px; margin: auto;">

        <form action="/admin/login" method="post"  class="card-body cardbody-color p-md-4">

          <div class="text-center mb-3">
            <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle"
              width="100px" alt="profile">
          </div>

          <div class="mb-3">
            <input type="text" class="form-control" id="inputUser" aria-describedby="emailHelp"
              placeholder="User Name" name="usuario">
          </div>
          <div class="mb-3">
            <input type="password" class="form-control" id="inputPassword" placeholder="password" name="password">
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-color px-4 w-100">Login</button>
          </div>
          <div id="emailHelp" class="form-text text-center text-dark mt-3">Not Registered? <a href="#" class="text-dark fw-bold"> Create an Account</a></div>
        </form>
        {{#if error}}
        <p class="text-center text-danger mt-3">Usuario o contrase√±a incorrectos</p>
        {{/if}}
      </div>

    </div>
  </div>
</div>