{{!--tabla--}}
<div class="row">
    <div class="col">
        <table class="table">
       <thead>
        <tr class="table-dark">
            <th scope="col">#</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Precio</th>
            <th scope="col">Cantidad</th>
            <th scope="col">imagen</th>
            <th scope="text-end">Acciones</th>
        </tr>
       </thead>
       <tbody>
{{#each producto}}

        <tr>
            <th scope="row">{{pr_id}}</th>
            <td>{{pr_descripcion}}</td>
            <td>{{pr_precio}}</td>
            <td>{{pr_cantidad}}</td>
            <td>{{{imagen}}}</td>
            <td class="text-end">
                <a class="btn btn-secondary" href="/admin/productos/modificar/{{pr_id}}">
                    <i class="fa fa-pencil" aria-hidden="true"></i></a>
                <a class="btn btn-secondary" href="/admin/productos/eliminar/{{pr_id}}">
                    <i class="fa fa-trash" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
       </tbody>
        </table>
    </div>

</div>